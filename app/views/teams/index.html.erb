<header class="masthead">
    <div class="margin-top">
<h1> Your Teams </h1>

<% if @teams.empty? %>
 You haven't created any teams yet, <%= link_to "Create A Team Here", new_user_team_path(current_user) %>
 <br>
 <br>
<% end%>

<%= image_tag("kyrie.jpg", width: 500, class: "img-responsive center-block") %>
 <div class="col-lg-6">
<% @teams.each do |t| %>
 <p class="text-muted">
  <%= link_to t.team_name, user_team_path(current_user, t)%> //
   <%= link_to 'Edit', edit_user_team_path(current_user, t) %>  //      
 <%= link_to 'Delete', user_team_path(current_user, t), method: :delete %>

<% end %>
